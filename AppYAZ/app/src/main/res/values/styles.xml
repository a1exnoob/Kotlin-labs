<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Primary Button -->
    <style name="MyFilledButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="shapeAppearance">?attr/shapeAppearanceMediumComponent</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Secondary Button -->
    <style name="MyOutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:strokeColor">@color/primary_color</item>
        <item name="android:strokeWidth">2</item>
        <item name="shapeAppearance">?attr/shapeAppearanceMediumComponent</item>
    </style>

    <!-- Text Button -->
    <style name="MyTextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <!-- Title Text -->
    <style name="MyTitleText">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Body Text -->
    <style name="MyBodyText">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <!-- Card Style -->
    <style name="MyCardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/secondary_color</item>
    </style>

    <!-- EditText Style -->
    <style name="MyEditText" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="hintTextColor">@color/primary_color</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="shapeAppearance">?attr/shapeAppearanceSmallComponent</item>
    </style>

    <!-- Toolbar Style -->
    <style name="MyToolbar">
        <item name="android:background">@color/secondary_color</item>
        <item name="titleTextColor">@color/primary_color</item>
        <item name="android:elevation">8dp</item>
    </style>
</resources>